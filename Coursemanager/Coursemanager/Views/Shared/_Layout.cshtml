@using Coursemanager.Models
@{
    var sidebars = (List<Sidebar>)ViewBag.Sidebar;
}

<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - 我的 ASP.NET MVC 应用程序</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .sidebar {
            display: flexbox;
            flex-direction: column;
           text-justify:auto;
        }

            .sidebar li a {
                color: #333;
            }
    </style>
</head>
<body>
    @Html.Action("Navbar", "Home")
    <div class="container body-content">
        <div id="body" class="col-md-3">
            @Html.Action("sidebar", "Home")
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
        <hr/>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - 我的 ASP.NET MVC 应用程序</p>
            </div>
            0000
        </div>
    </footer>
    
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
